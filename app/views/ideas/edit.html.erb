<div class="row">
	<div class="small-6 columns small-centered idea-form">
    <h2>Add An Idea</h2>
    <%= form_tag do %>
      <%= label_tag(:title, "Title") %>
      <%= text_field(:idea, :title) %>
      <%= label_tag(:body, "Body") %>
      <%= text_field(:idea, :body) %>
      <%= hidden_field(:idea, :id) %>
    <% end %>
    <input id="finish-editing-idea" type="button" name="submit" value="Revise This Idea!">
  </div>
</div>