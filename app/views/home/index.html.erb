<div class="row">
  <div class="small-6 columns idea-holder">
    <h2>All Ideas</h2>
    <%= form_tag do %>
      <%= label_tag(:search, "Search") %>
      <%= text_field(:idea, :search) %>
    <% end %>
    <ul id="idea-list">
    </ul>
  </div>
  <div class="small-6 columns idea-form">
    <h2>Add An Idea</h2>
    <%= form_tag do %>
      <%= label_tag(:title, "Title") %>
      <%= text_field(:idea, :title) %>
      <%= label_tag(:body, "Body") %>
      <%= text_field(:idea, :body) %>
    <% end %>
    <input id="new-idea-button" type="button" name="submit" value="Pitch This Idea!">
  </div>
</div>
